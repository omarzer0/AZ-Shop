<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    >


    <TextView
        android:id="@+id/tv_item_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/fruits"
        android:textColor="@color/text_dark_primary"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_item_rv_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/view_more"
        android:textColor="@color/text_dark_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_rv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_rv_title" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_rv_inner_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_item_rv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_rv_title"
        tools:itemCount="20"
        tools:listitem="@layout/item_child_product" />
</androidx.constraintlayout.widget.ConstraintLayout>